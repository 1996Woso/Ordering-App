@using Ordering_App.Models.Domain
@model Restaurant

<div class="container-fluid bg-light rounded py-4 px-3">
    <div class="row gy-4">
        <!-- Restaurant Info Section -->
        <div class="col-12 col-lg-4">
            @if (Model != null)
            {
                <table class="table table-bordered table-striped">
                    <tbody>
                        <tr>
                            <td><strong>Restaurant Name</strong></td>
                            <td>@Model.Name</td>
                        </tr>
                        <tr>
                            <td><strong>Location Details</strong></td>
                            <td>@Model.LocationDescription</td>
                        </tr>
                        <tr>
                            <td><strong>Contact No</strong></td>
                            <td>@Model.ContactNumber</td>
                        </tr>
                    </tbody>
                </table>
            }
        </div>

        <!-- Menu Items Section -->
        <div class="col-12 col-lg-8">
            <form asp-action="ReviewCart" asp-controller="Order">
                <div class="table-responsive">
                    <table class="table table-hover table-striped align-middle" id="myTable">
                        <thead class="table-dark">
                            <tr>
                                <th>Name</th>
                                <th>Price (R)</th>
                                <th class="d-none d-md-table-cell">Description</th>
                                <th>Select</th>
                                <th>Quantity</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.MenuItems)
                            {
                                <tr>
                                    <td>@item.Name</td>
                                    <td>@item.Price</td>
                                    <td class="d-none d-md-table-cell">@item.Description</td>
                                    <td>
                                        <input type="checkbox" name="SelectedMenuItemIds" value="@item.Id"/>
                                    </td>
                                    <td>
                                        <input type="number" class="form-contro" name="NumberOfSelectedItems">
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="mt-3 text-start">
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-bag-check"></i> Add to Chart
                    </button>
                </div>
            </form>
        </div>
        @if (Model != null)
        {
               <!-- Filters Section -->
        <div class="col-12">
            <form asp-action="RestaurantsDetails" asp-route-id="@Model.Id" asp-controller="Restaurant" method="get">
                <div class="row g-2 mb-3">
                    <!-- Price From -->
                    <div class="col-6 col-sm-4 col-md-3 col-lg-2">
                        <label class="form-label">Price from:</label>
                        <input type="number" class="form-control" name="minPrice" value="@ViewBag.MinPrice" />
                    </div>
                    <!-- Price To -->
                    <div class="col-6 col-sm-4 col-md-3 col-lg-2">
                        <label class="form-label">Price to:</label>
                        <input type="number" class="form-control" name="maxPrice" value="@ViewBag.MaxPrice" />
                    </div>
                    <!-- Item Name -->
                    <div class="col-6 col-sm-4 col-md-3 col-lg-2">
                        <label class="form-label">Item Name</label>
                        <input class="form-control" value="@ViewBag.ItemName" name="menuItemName">
                    </div>
                    <!-- Menu Description -->
                    <div class="col-6 col-sm-6 col-md-3 col-lg-2">
                        <label class="form-label">Item Description</label>
                        <input  name="menuItemDescription" class="form-control" value="@ViewBag.Description" />
                    </div>
                    <!-- Action Buttons -->
                    <div class="col-12 col-md-6 col-lg-4 d-flex align-items-end">
                        <div class="d-flex flex-wrap gap-2 w-100">
                            <button class="btn btn-primary flex-fill" type="submit">
                                <i class="bi bi-send-check-fill text-dark"></i> Apply filters
                            </button>
                            <a href="/Restaurant/RestaurantsDetails/@Model.Id" class="btn btn-info flex-fill" type="button">
                                <i class="bi bi-arrow-clockwise text-success"></i> Reset filters
                            </a>
                        </div>
                    </div>
                </div>
            </form>
        </div>

        <!-- Pagination Section -->
        <div class="col-12 d-flex justify-content-center">
            <nav aria-label="Page navigation">
                <ul class="pagination justify-content-center flex-wrap">
                    <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
                        <a class="page-link" asp-action="RestaurantsDetails" asp-route-pageNumber="@(ViewBag.CurrentPage - 1)"
                           asp-route-minPrice="@ViewBag.MinPrice"
                           asp-route-maxPrice="@ViewBag.MaxPrice" asp-route-menuItemName="@ViewBag.ItemName"
                           asp-route-orderStatus="@ViewBag.OrderStatus"
                           asp-route-id="@Model.Id" asp-route-menuItemDescription="@ViewBag.Description">
                            Previous
                        </a>
                    </li>

                    @for (int i = 1; i <= ViewBag.TotalPages; i++)
                    {
                        <li class="page-item @(ViewBag.CurrentPage == i ? "active" : "")">
                            @if (i <= 2)
                            {
                                <a class="page-link" asp-action="RestaurantsDetails" asp-route-pageNumber="@i"
                                   asp-route-minPrice="@ViewBag.MinPrice"
                                   asp-route-maxPrice="@ViewBag.MaxPrice" asp-route-menuItemName="@ViewBag.ItemName"
                                   asp-route-orderStatus="@ViewBag.OrderStatus"asp-route-id="@Model.Id"
                                   asp-route-menuItemDescription="@ViewBag.Description">
                                    @i
                                </a>
                            }
                        </li>
                    }

                    <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
                        <a class="page-link" asp-action="RestaurantsDetails" asp-route-pageNumber="@(ViewBag.CurrentPage + 1)"
                           asp-route-minPrice="@ViewBag.MinPrice"
                           asp-route-maxPrice="@ViewBag.MaxPrice" asp-route-menuItemName="@ViewBag.ItemName"
                           asp-route-orderStatus="@ViewBag.OrderStatus" asp-route-id="@Model.Id"
                           asp-route-menuItemDescription="@ViewBag.Description">
                            Next
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
        }
    </div>
</div>

@section Scripts {
    
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}