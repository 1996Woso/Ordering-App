@using Ordering_App.Models.Domain
@model Restaurant

<div class="container-fluid bg-light rounded py-4 px-3">
    <div class="row gy-4">
        <!-- Restaurant Info Section -->
        <div class="col-12 col-md-6 col-lg-4">
            @if (Model != null)
            {
                <table class="table table-bordered table-striped">
                    <tbody>
                        <tr>
                            <td><strong>Restaurant Name</strong></td>
                            <td>@Model.Name</td>
                        </tr>
                        <tr>
                            <td><strong>Location Details</strong></td>
                            <td>@Model.LocationDescription</td>
                        </tr>
                        <tr>
                            <td><strong>Contact No</strong></td>
                            <td>@Model.ContactNumber</td>
                        </tr>
                    </tbody>
                </table>
            }
        </div>

        <!-- Menu Items Section -->
        <div class="col-12 col-md-6">
            <form asp-action="ReviewCart" asp-controller="Order">
                <div class="table-responsive">
                    <table class="table table-hover table-striped align-middle">
                        <thead class="table-dark">
                            <tr>
                                <th>Name</th>
                                <th>Price (R)</th>
                                <th>Description</th>
                                <th>Select</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.MenuItems)
                            {
                                <tr>
                                    <td>@item.Name</td>
                                    <td>@item.Price</td>
                                    <td>@item.Description</td>
                                    <td>
                                        <input type="checkbox" name="SelectedMenuItemIds" value="@item.Id" />
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="mt-3 text-start">
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-bag-check"></i> Add to Chart
                    </button>
                </div>
            </form>

        </div>

    </div>

</div>
</div>
