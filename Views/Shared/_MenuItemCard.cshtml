@using Ordering_App.Models.Domain
@model MenuItem

<div class="card mb-4 menu-item-card">
    <div class="card-img-wrapper position-relative">
        <img src="~/images/menu-items/@(Model.Id).jpg"
             alt="@Model.Name"
             class="card-img-top menu-item-image"
             onerror="this.src='~/images/default-food.jpg'">

        <div class="menu-item-overlay">
            <ul class="list-inline member-icons animate text-center">
                <li class="list-inline-item">
                    <button class="btn btn-primary btn-sm" title="View Details">
                        <i class="bi bi-eye"></i>
                    </button>
                </li>
                <li class="list-inline-item">
                    <button class="btn btn-success btn-sm" title="Add to Cart">
                        <i class="bi bi-cart-plus"></i>
                    </button>
                </li>
                <li class="list-inline-item">
                    <button class="btn btn-warning btn-sm" title="Add to Favorites">
                        <i class="bi bi-heart"></i>
                    </button>
                </li>
            </ul>
        </div>
    </div>

    <div class="card-body p-3">
        <h5 class="card-title text-center mb-2">
            <b>
                <i class="bi bi-dish fs-5 text-primary"></i>
                @Model.Name
            </b>
        </h5>

        <p class="card-text text-muted text-center small mb-2">
            @Model.Description
        </p>

        <div class="text-center">
            <span class="badge bg-success fs-6 px-3 py-2">
                <i class="bi bi-currency-dollar"></i>
                R @Model.Price.ToString("F2")
            </span>
        </div>
    </div>
</div>
